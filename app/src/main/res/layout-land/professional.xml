<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/professionalType"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Senior Filmaker " />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/professionalDescription"
            android:text="This intimate, joyful, haunting portrait of playwright Maria Irene Fornes shows art and friendship enduring in the face of forgetting."
            android:textColor="#000000"

            android:textStyle="normal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#0c3934"
            android:text="Aplicar"
            android:textColor="#ffffff" />

    </LinearLayout>

</android.support.v7.widget.CardView>
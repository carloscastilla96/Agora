<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7ebed"
    android:orientation="horizontal"
    tools:context="com.example.carloshernando.agora.FirstScreen">

    <Button
        android:id="@+id/iniciarSesion"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:background="#202021"
        android:elevation="3dp"
        android:onClick="onInicioSesion"
        android:text="INICIAR SESION"
        android:textColor="#ffffff">

    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:elevation="0.5dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right"
            android:text="AGORA"
            android:textColor="#000000"
            android:textSize="40dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="right"
            android:text="Encuentra y crea"

            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="right"
            android:text="proyectos interdisciplinarios"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="alrededor del mundo."
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/registro"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="200dp"
        android:background="#202021"
        android:elevation="3dp"
        android:onClick="onRegistro"
        android:text="REGISTRO"
        android:textColor="#ffffff">

    </Button>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7ebed"
        android:orientation="horizontal"
        tools:context=".Login">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#0c3934">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"

    android:background="#f7ebed"
    android:bottomLeftRadius="20dp"
    android:bottomRightRadius="7dp"
    android:orientation="vertical"
    android:topLeftRadius="7dp"
    android:topRightRadius="7dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:maxHeight="@dimen/activity_vertical_margin"
        android:src="@drawable/AgoraPDF"

        ></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:text="Arte" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:text=">" />

            <TextView
                android:id="@+id/subcategoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:text="Documental" />
        </LinearLayout>

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="The rest i make up: Maria Irene Fornes "
            android:textColor="#0c3934"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/autor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Michell Memran"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="This intimate, joyful, haunting portrait of playwright Maria
Irene Fornes shows art and friendship enduring... "
            android:textColor="#000000"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/User_Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="2"
                    android:textColor="#000000"
                    android:id="@+id/enrolledProfessionals"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="/"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="2"
                    android:textColor="#000000"
                    android:id="@+id/neededProfessionals"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/Location_Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="New York, NY"
                    android:textColor="#000000"
                    android:id="@+id/ciudad"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/World_Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="No Presencial"
                    android:textColor="#000000"
                    android:id="@+id/tipoDeTrabajo"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#0c3934"
            android:textSize="20dp"
            android:text="32"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#0c3934"
                android:textSize="20dp"
                android:layout_marginLeft="6dp"
                android:text="dias mÃ¡s"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
